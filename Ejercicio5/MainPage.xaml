<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5.MainPage">

    <StackLayout Padding="20">
        <Label Text="Ingrese la altura del rectángulo:" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="Altura" Placeholder="Altura" Keyboard="Numeric" />

        <Label Text="Ingrese la base del rectángulo:" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="Base" Placeholder="Base" Keyboard="Numeric" />

        <Button Text="Calcular Perímetro y Área" Clicked="Button_Clicked" BackgroundColor="LightGoldenrodYellow"/>

        <Label x:Name="Perimetro" FontSize="20" HorizontalOptions="Center" />
        <Label x:Name="Area" FontSize="20" HorizontalOptions="Center" />
    </StackLayout>
    
</ContentPage>
